    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProjectEmployeesDeleteForm</h2>


@using (Html.BeginForm("DeleteProcess","ProjectEmployees"))
{
    @Html.AntiForgeryToken()
    
